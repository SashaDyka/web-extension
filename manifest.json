{
  "manifest_version": 3,
  "name": "Chrome Extension",
  "version": "1.0.0",
  "description": "A simple React app as a Chrome extension",

  "action": {
    "default_popup": "index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
