{
  "manifest_version": 3,
  "name": "Color Changer",
  "version": "0.1.0",
  "description": "Custom website",

  "action": {
    "default_popup": "index.html"
  },

  "side_panel": {
    "default_path": "index.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content": {
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  },

  "commands": {
    "open_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Open the side panel"
    }
  },

  "permissions": ["sidePanel"],
  "host_permissions": ["<all_urls>"]
}
